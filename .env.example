# ============================================
# SUPABASE CONFIGURATION (REQUERIDO)
# ============================================
# Obtén estos valores desde: https://supabase.com/dashboard
# Settings → API → Project URL y anon public key

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ⚠️ IMPORTANTE: Service Role Key
# Necesaria SOLO para ejecutar el script de generación de datos: npm run db:seed
# NUNCA expongas esta clave en el frontend - solo para scripts backend locales
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# APP CONFIGURATION (REQUERIDO)
# ============================================
# Local: http://localhost:5173
# Vercel: https://tu-dominio.vercel.app

VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=Gestabiz

# ============================================
# GOOGLE OAUTH (REQUERIDO PARA LOGIN CON GOOGLE)
# ============================================
# Para autenticación con Google (Sign in with Google)
# También se usa para integración de Google Calendar
# Obtén desde: https://console.cloud.google.com/

VITE_GOOGLE_CLIENT_ID=
VITE_GOOGLE_CLIENT_SECRET=

# ============================================
# PAYMENT GATEWAY (REQUERIDO SI USAS BILLING)
# ============================================
# Selecciona la pasarela de pagos: 'stripe', 'payu', o 'mercadopago'
# NOTA: Si no configuras ninguna, solo el Plan Gratuito estará disponible
# VITE_PAYMENT_GATEWAY=stripe

# ============================================
# STRIPE (OPCIONAL)
# ============================================
# Solo si VITE_PAYMENT_GATEWAY=stripe
# Obtén desde: https://dashboard.stripe.com/apikeys

# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# ============================================
# PAYU (OPCIONAL)
# ============================================
# Solo si VITE_PAYMENT_GATEWAY=payu
# Obtén desde: https://developers.payulatam.com/

VITE_PAYU_MERCHANT_ID=your-merchant-id
VITE_PAYU_ACCOUNT_ID=your-account-id
VITE_PAYU_PUBLIC_KEY=your-public-key

# ============================================
# MERCADOPAGO (OPCIONAL)
# ============================================
# Solo si VITE_PAYMENT_GATEWAY=mercadopago
# Obtén desde: https://www.mercadopago.com/developers/panel/app
# Public Key (Producción): APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# Public Key (Sandbox): TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# VITE_MERCADOPAGO_PUBLIC_KEY=TEST-your-public-key

# ============================================
# BUG REPORT SYSTEM (REQUERIDO)
# ============================================
# Email del equipo de soporte para recibir reportes de bugs
# Este email debe estar verificado en AWS SES (Simple Email Service)
# Para desarrollo, puedes usar tu propio email

VITE_SUPPORT_EMAIL=soporte@gestabiz.com

# ============================================
# DEMO MODE (SOLO DESARROLLO)
# ============================================
# ⚠️ NO activar en producción (Vercel)
# Activa cliente Supabase simulado para testing sin backend

# VITE_DEMO_MODE=false

# ============================================
# SENTRY ERROR TRACKING (REQUERIDO PARA LOGGING)
# ============================================
# Sistema de captura de errores y monitoreo
# Plan gratuito: 5,000 eventos/mes, retención 90 días
# Obtén desde: https://sentry.io/signup/

# Frontend DSN (para errores de React/Vite)
VITE_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
VITE_APP_VERSION=1.0.0
VITE_SENTRY_SAMPLE_RATE=0.3

# Auth token y config para subir sourcemaps (solo CI/CD, NO commitear)
# SENTRY_AUTH_TOKEN=sntrys_your_token_here
# SENTRY_ORG=your-organization-slug
# SENTRY_PROJECT=your-project-name

# ============================================
# GOOGLE ANALYTICS 4 (OPCIONAL)
# ============================================
# Analytics y tracking de eventos
# Obtén desde: https://analytics.google.com/

VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GA_FORCE_IN_DEV=false
{
  "manifest_version": 3,
  "name": "AppointmentPro - Quick Access",
  "version": "1.0.0",
  "description": "Quick access to your upcoming appointments and easy app navigation",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://your-app-domain.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AppointmentPro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup.html", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}